import random 
user_choice = int(input("what do you chose? type 1 for rock, type 2 for paper, type 3 for scissor\n"))
computer_choice = random.randint(a=1,b=3)
print(f"computer chose{computer_choice}")
if user_choice >=4 or user_choice<1:
    print("invalid input")
elif user_choice==1 and computer_choice==2:
    print("computer win")
elif computer_choice==1 and user_choice==2:
    print("you win")
elif computer_choice==2 and user_choice== 3:
    print("you win")
elif computer_choice==1 and  user_choice==3:
    print("computer win")
elif computer_choice == user_choice:
    print("the match is draw. try again " )
